<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/abcdef"
    >


    <android.support.design.widget.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="#4D58BF"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="SMART"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Setting"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="100dp"
            android:onClick="onClick"
            android:scrollbarFadeDuration="250"
            app:srcCompat="@drawable/ic_launcher_foreground" />
    </android.support.design.widget.AppBarLayout>





    <ImageView
        android:id="@+id/Activate"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/presence_online"
        android:layout_gravity="right|bottom"
        android:onClick="onClick"
        />

    <ImageView
        android:id="@+id/menu1"
        android:layout_width="160dp"
        android:layout_height="146dp"
        android:layout_gravity="start"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="390dp"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/abd" />

    <ImageView
        android:id="@+id/menu2"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_gravity="start"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="390dp"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/abf" />

    <ImageView
        android:id="@+id/menu3"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="510dp"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/abc" />

    <ImageView
        android:id="@+id/menu4"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="510dp"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:scrollbarDefaultDelayBeforeFade="400"
        android:scrollbarFadeDuration="215"

        app:srcCompat="@drawable/abg" />

    <ImageView
        android:id="@+id/roboton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="265dp"
        android:onClick="onClick"
        android:scaleType="fitXY"


        app:srcCompat="@drawable/on" />

    <ImageView
        android:id="@+id/robotoff"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="265dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/off"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginLeft="352dp"
        android:layout_marginTop="320dp"
        android:scaleType="fitXY"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="740dp"
        android:scaleType="fitXY"
        android:text="보험사 신고 접수" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="320dp"
        android:scaleType="fitXY"
        android:text="ON" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="540dp"
        android:scaleType="fitXY"
        android:text="2차 사고 대처 요령"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="540dp"
        android:scaleType="fitXY"
        android:text="과실 비율 "
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="740dp"
        android:scaleType="fitXY"
        android:text="설정" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="270dp"
        android:scaleType="fitXY"
        android:text="안전삼각대 로봇 "
        android:textColor="#88030303"
        android:textSize="22dp"
        android:textStyle="bold" />




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="320dp"
        app:srcCompat="@drawable/dffgg" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/kjjjjj"
        android:layout_gravity="start"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="360dp"/>

</android.support.design.widget.CoordinatorLayout>